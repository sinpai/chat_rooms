<%= link_to 'New Chatroom', new_chatroom_path, class: "new-chat btn btn-default pull-right" %>
<h2>Chatrooms</h2>

<div class="chat-list-container">
  <div class="row">
    <% @chatrooms.each do |chatroom| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading text-center"><%= chatroom.name %></div>
        <div class="panel-body">
          <div class="chat-buttons d-flex flex-row justify-content-between align-items-center flex-wrap">
            <span><%= link_to "Join", chatroom_chatroom_users_path(chatroom), class: "btn btn-primary", method: :post %></span>
            <span><%= link_to "Leave", chatroom_chatroom_users_path(chatroom), class: "btn btn-primary", method: :delete %></span>
          </div>
          <span class="chat-remove pull-right"><%= link_to 'Remove', chatroom, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<br>